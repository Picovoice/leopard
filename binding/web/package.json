    "@rollup/plugin-commonjs": "^18.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "async-mutex": "^0.3.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
